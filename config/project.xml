<project>
	<name>Hello World</name>
	<description>Simple Hello World application.</description>
	<language>en</language>
	<version>0.2.1</version>
	<url>http://dev.collab.com/pair</url>
	<copyright>Copyright 2007 The Pair Project. All rights reserved.</copyright>
	<organization>
		<name>Collab</name>
		<unit>The Pair Project</unit>
		<country>The Netherlands</country>
		<email>pair@collab.com</email>
	</organization>
	<license>docs/LICENSE.txt</license>
	<buildDir>build</buildDir>
	<imageDir>build/imagecontents</imageDir>
	<distDir>dist</distDir>
	<reportDir>report</reportDir>
	<configDir>config</configDir>
	<flex>
		<source>flex/src</source>
		<libraries>flex/lib</libraries>
		<swfName>hello-world</swfName>
		<mxml>flex/main.mxml</mxml>
		<locale>
			<path>resources/air/locale</path>
			<language>en_US</language>
		</locale>
		<compiler>
			<home>/Developer/SDKs/flex3</home>
			<libraries>/Developer/SDKs/flex3/lib</libraries>
			<config>/Developer/SDKs/flex3/frameworks/flex-config.xml</config>
			<flexTasks>/Developer/SDKs/flex3/ant/lib/flexTasks.jar</flexTasks>
			<asdoc>/Developer/SDKs/flex3/bin/asdoc</asdoc>
			<benchmark>true</benchmark>
			<useNetwork>true</useNetwork>
		</compiler>
		<asdoc>
			<outputDir>report/reports/api/air</outputDir>
			<domainExtensions>flex/src/pair/</domainExtensions>
			<template>/Developer/SDKs/flex3/asdoc/templates</template>
			<frameWidth>150</frameWidth>
			<windowTitle>Hello World API Documentation</windowTitle>
			<mainTitle>Hello World API Documentation</mainTitle>
			<footer>Copyright 2007 The Pair Project. All rights reserved.</footer>
		</asdoc>
	</flex>
	<air>
		<adt>
			<config>resources/air/app-config.xml</config>
			<id>Pair</id>
			<title>Hello World</title>
			<name>Hello World</name>
			<description>Welcome to the Hello World installer.</description>
			<systemChrome>standard</systemChrome>
			<transparent>false</transparent>
			<visible>true</visible>
			<installFolder>Hello World</installFolder>
			<maximizable>true</maximizable>
			<minimizable>true</minimizable>
  			<resizable>false</resizable>
			<width>500</width>
			<height>500</height>
		  	<minSize>250 250</minSize>
		  	<maxSize>750 750</maxSize>
		  	<x>150</x>
		  	<y>150</y>
			<iconsFolder>/Developer/SDKs/flex3/samples/icons</iconsFolder>
			<icon>
				<image16x16>AIRApp_16.png</image16x16>
          			<image32x32>AIRApp_32.png</image32x32>
          			<image48x48>AIRApp_48.png</image48x48>
          			<image128x128>AIRApp_128.png</image128x128> 
			</icon>
		</adt>
		<runtime>
			<version>1.0.M5</version>
			<packager>/Developer/SDKs/flex3/lib/adt.jar</packager>
			<debugger>/Developer/SDKs/flex3/bin/adl</debugger>
			<config>/Developer/SDKs/flex3/frameworks/air-config.xml</config>
			<windows>C:/flex3/runtimes/air/win/Adobe AIR</windows>
			<macosx>/Developer/SDKs/flex3/runtimes/air/mac/Adobe AIR.framework</macosx>
		</runtime>
		<certificate>
			<name>My Certificate</name>
			<type>2048-RSA</type>
			<file>certificate.pfx</file>
			<password>1234567890</password>
		</certificate>
	</air>
	<python>
		<version>2.5</version>
		<source>python</source>
		<includes></includes>
		<excludes></excludes>
		<windows>C:/Python25/python.exe</windows>
		<optimize>2</optimize>
		<doc>
			<outputType>html</outputType>
			<outputDir>report/reports/api/python</outputDir>
			<sourcecode>yes</sourcecode>
			<frames>yes</frames>
		</doc>
	</python>
	<macosx>
		<mountDir>build/mnt</mountDir>
		<bundleId>HelloWorld</bundleId>
		<plist>resources/mac/Info.plist</plist>
		<eula>resources/mac/SLAResources.rsrc</eula>
		<positionScript>resources/mac/positionItems.scpt</positionScript>
		<background>resources/mac/background.png</background>
		<volumeIcon>resources/mac/VolumeIcon.icns</volumeIcon>
		<appIcon>resources/mac/pair.icns</appIcon>
	</macosx>
	<windows>
		<imgcfg>C:/software/imagecfg.exe</imgcfg>
		<nsis>
			<exe>C:/Program Files/NSIS/makensis.exe</exe>
			<config>resources/win/installer.nsi</config>
			<header>resources/win/header.bmp</header>
		</nsis>
	</windows>
</project>
