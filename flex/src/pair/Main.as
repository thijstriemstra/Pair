package pair{	import flash.system.Capabilities;		import mx.core.WindowedApplication;		/**	 * Hello World test application for Pair.	 * 	 * @author Thijs Triemstra	*/		public class Main extends WindowedApplication	{		[Bindable]		public var flashVersion : String;				/**		 * 		 */						public function Main() : void		{			var platformVersion : String = Capabilities.version.substr( String( Capabilities.version ).lastIndexOf(" ") + 1 );			var manufacturer : String = Capabilities.manufacturer;			// Get Flash Player version info.			flashVersion = "FP " + platformVersion;			//			if ( Capabilities.isDebugger ) 			{				// Add debugger info.				flashVersion += " (debug)";			}		}			}}